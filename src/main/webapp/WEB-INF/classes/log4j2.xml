<?xml version="1.0" encoding="UTF-8"?>
<configuration status="error">
    <appenders>
        <!--<Console name="Console" target="SYSTEM_OUT">-->
            <!--<PatternLayout pattern="%d{ISO8601} [%-5level] %logger{36}:%L - %msg%n"/>-->
        <!--</Console>-->
        <RollingFile name="RollingFile" fileName="${sys:catalina.base}/logs/ofs/ofs.log"
                     filePattern="${sys:catalina.home}/logs/ofs/ofs-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{ISO8601} [%-5level] %logger{36}:%L - %msg%n"/>
            <TimeBasedTriggeringPolicy/>
            <!--<OnStartupTriggeringPolicy/>-->
        </RollingFile>
    </appenders>
    <loggers>
        <root level="error">
            <!--<appender-ref ref="Console"/>-->
            <appender-ref ref="RollingFile"/>
        </root>
    </loggers>
</configuration>